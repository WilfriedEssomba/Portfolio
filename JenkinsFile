pipeline {
    agent any
    tools {
        nodejs 'Node 23'
    }
    stages {
        stage('Build') {
            steps {
                sh 'ls -la'
                sh 'node --version'
                sh 'npm --version'
                sh 'npm ci'
                sh 'npm run build'
                sh 'ls -la'
            }
        }
        stage('Test') {
            steps {
                sh 'echo "Execute tests here"'
            }
        }
        stage('Deploy') {
            steps {
                sh 'npm install netlify-cli'
                sh 'netlify'
            }
        }
    }
}
