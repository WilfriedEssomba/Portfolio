pipeline {
    agent any
    environment {
        NETLIFY_SITE_ID = '7638c9ce-eea9-4182-89f5-ed683f6ba359'
    }
    tools {
        nodejs 'Node 23'
    }
    stages {
        stage('Build') {
            steps {
                sh 'ls -la'
                sh 'node --version'
                sh 'npm --version'
                sh 'npm ci'
                sh 'npm run build'
                sh 'ls -la'
            }
        }
        stage('Test') {
            steps {
                sh 'echo "Execute tests here"'
            }
        }
        stage('Deploy') {
            steps {
                sh '''
                    npm install netlify-cli -g
                    netlify
                echo "Deploying to production. Site ID = $NETLIFY_SITE_ID"
                '''
            }
        }
    }
}
